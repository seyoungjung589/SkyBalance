<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F0F8FF"
    tools:context=".DiaryEntryActivity">

    <TextView
        android:id="@+id/tv_diary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✈️ 일기 작성"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_diary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜: 2025년 6월 17일"
        android:textSize="18sp"
        android:textColor="#555555"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_diary_title" />

    <EditText
        android:id="@+id/et_diary_entry"
        android:layout_width="362dp"
        android:layout_height="536dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:gravity="top|start"
        android:hint="오늘의 비행과 경험에 대해 작성해주세요..."
        android:inputType="textMultiLine|textCapSentences"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/btn_save_diary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_diary_date" />

    <Button
        android:id="@+id/btn_save_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:drawablePadding="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="save"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="639dp" />
    android:textColor="@android:color/white"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:cornerRadius="10dp"
    android:elevation="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
